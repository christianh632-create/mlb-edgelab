export default async function handler(req, res) {
  const { date = "" } = req.query || {};
  const url = `https://statsapi.mlb.com/api/v1/schedule?sportId=1&date=${date}&hydrate=team,probablePitcher(note),venue(note)`;
  try { const r = await fetch(url, { cache: "no-store" }); res.status(200).json(await r.json()); }
  catch(e){ res.status(200).json({ __error:true, message:String(e) }); }
}
